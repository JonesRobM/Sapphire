

! =========================
! MolDyn_MS Input File
! =========================

&simul
  irand  = 3987,                     ! odd 4 digits number lower than 4095
  tstep  = 5.d-15,                   ! time step smaller than phonon frequencies, usually 1-7 fs
  npas   = 20000000,                     ! total number of steps (2000000000)
  scrivo = 20000,                       ! after how many steps the program writes
  npast  = 20000,                     ! thermalization time
  type_process = 'microcan',        ! 'quenching' 'microcan' 'melting' 'freezing' 'growth' 'metadynamics'
  vnu    = 5.d11,                    ! Andersen thermostat frequency (5.d11)
  filepos = '../Au-Pt-0.3.xyz',          ! 'initial position file'
  filepot      = "/home/k1899676/POT_FILE/Au_Pt.pot",                  ! 'potential file name' for RGL potential
  mgo_substrate = .false.,           ! for the MgO force-field
  impl_env = .false.
  tinit = 600,
/

&system
  type_potential  = 'rgl',           ! potential type between LJ, RGL(for metallic systems), Girifalco 
  natom           = 1415,             ! ICutial number of atoms in the cluster
  fattor          = 1.d0,            ! leave it, stupid uCuts conversion
  elem1           = 'Au',            ! chemical species one
  elem2           = 'Pt',            ! chemical species two
  sys             = 'bim',           ! put bim if it is bimetallic otherwise mon
/

  ! NAMELIST for the specific procedure chosen
  ! &quench   : for quenching and microcanoCucal
  ! &melt     : for any caloric simulation (both melting/freezing)
  ! &growth   : for the one-by-one addition of atoms over the cluster
  ! &metalist : for metadynamics and to compute CV values

&melt
  deltat          = 5000.d0,            ! temperature step
  tcaloric        = 1500.d0,          ! final temperature
/

&quench
itremp = 50
tmin = 1.d-5
/

&canon
 vel_af = .true.
/

